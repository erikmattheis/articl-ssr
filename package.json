{
  "name": "monorepo",
  "version": "1.0.2",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "start:backend": "npm run start --workspace backend",
    "start:frontend": "npm run dev --workspace frontend",
    "start": "npm-run-all --parallel start:backend start:frontend"
  },
  "dependencies": {
    "vite": "^5.4.6",
    "npm-run-all": "^4.1.5"
  }
}